{
    "name": "newsong/bible-verse-finder",
    "description": "A Statamic addon for selecting and fetching Bible verses from multiple versions using external APIs",
    "type": "statamic-addon",
    "version": "1.2.0",
    "license": "MIT",
    "keywords": [
        "statamic",
        "addon",
        "bible",
        "scripture",
        "verses",
        "fieldtype",
        "nkjv",
        "kjv",
        "esv",
        "niv",
        "amp",
        "graphql"
    ],
    "authors": [
        {
            "name": "NewSong Church",
            "email": "tech@newsongpeople.com",
            "homepage": "https://newsongchurch.org"
        }
    ],
    "require": {
        "php": "^8.3|^8.4|^8.5",
        "statamic/cms": "^5.0|^6.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "NewSong\\BibleVerseFinder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NewSong\\BibleVerseFinder\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage"
    },
    "extra": {
        "statamic": {
            "name": "Bible Verse Finder",
            "description": "Select and fetch Bible verses from multiple versions"
        },
        "laravel": {
            "providers": [
                "NewSong\\BibleVerseFinder\\ServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
